<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BgoBack"
        android:layout_weight="1"
        android:onClick="onClickBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TVuserinfo"
        android:layout_weight="0.26"
        android:layout_marginStart="37dp"
        android:layout_alignBaseline="@+id/BgoBack"
        android:layout_alignBottom="@+id/BgoBack"
        android:layout_alignParentStart="true"
        android:text="Usertype: " />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/ETusertype"
        android:layout_below="@+id/TVusertypetag"
        android:layout_alignStart="@+id/TVuserinfo" />

    <TextView
        android:text="Usertype:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:id="@+id/TVusertypetag"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/BgoBack"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/TVhouseaddress"
        android:layout_alignStart="@+id/ETusertype"
        android:layout_marginTop="14dp"
        android:id="@+id/EThouseaddress" />

    <TextView
        android:text="Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EThouseaddress"
        android:layout_alignStart="@+id/TVhouseaddress"
        android:layout_marginTop="23dp"
        android:id="@+id/TVLocation" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:id="@+id/ETlocation"
        android:layout_below="@+id/TVLocation"
        android:layout_alignStart="@+id/EThouseaddress" />

    <TextView
        android:text="House Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/TVhouseaddress"
        android:layout_below="@+id/ETusertype"
        android:layout_alignStart="@+id/TVusertypetag" />
</RelativeLayout>
