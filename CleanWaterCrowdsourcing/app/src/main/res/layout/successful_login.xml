<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="@string/Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Blogout"
        android:onClick="onLogout"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/WelcomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/Blogout"
        android:layout_toStartOf="@+id/Blogout" />

    <Button
        android:text="@string/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Beditprofile"
        android:onClick="onEditProfile"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/load_data_n_and_n_view_reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Bcreatereport"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/Bviewreports"
        android:onClick="onViewReports" />

    <Button
        android:text="@string/view_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Bcreatereport"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:id="@+id/Bviewmap"
        android:onClick="onViewMap"
        tools:ignore="RelativeOverlap" />

    <Button
        android:text="@string/create_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:id="@+id/Bcreatereport"
        android:onClick="onCreateReport"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/view_history_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Bviewreports"
        android:layout_alignEnd="@+id/Bviewmap"
        android:id="@+id/Bhistory"
        android:onClick="onViewHistory" />

    <Button
        android:text="@string/create_n_purity_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Bviewreports"
        android:layout_alignEnd="@+id/Bhistory"
        android:layout_marginBottom="61dp"
        android:id="@+id/Bsubmitpurity"
        android:onClick="onCreatePurity" />

    <Button
        android:text="@string/view_n_purity_reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Bviewpurity"
        android:layout_above="@+id/Bviewreports"
        android:layout_alignStart="@+id/Bsubmitpurity"
        android:onClick="onViewPurity" />

</RelativeLayout>
