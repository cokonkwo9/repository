<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Blogout"
        android:onClick="onLogout"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Welcome user!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TVwelcome"
        android:layout_weight="1"
        android:textSize="36sp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/Blogout"
        android:layout_toStartOf="@+id/Blogout" />

    <Button
        android:text="Edit Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Beditprofile"
        android:onClick="onEditProfile"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Load Data \n and \n View Reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Bcreatereport"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/Bviewreports"
        android:onClick="onViewReports" />

    <Button
        android:text="View Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Bcreatereport"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:id="@+id/Bviewmap"
        android:onClick="onViewMap" />

    <Button
        android:text="Create Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:id="@+id/Bcreatereport"
        android:onClick="onCreateReport"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="View History Graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Bviewreports"
        android:layout_alignEnd="@+id/Bviewmap"
        android:id="@+id/Bhistory"
        android:onClick="onViewHistory" />

    <Button
        android:text="Create \n Purity report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Bviewreports"
        android:layout_alignEnd="@+id/Bhistory"
        android:layout_marginBottom="61dp"
        android:id="@+id/Bcreatepurity"
        android:onClick="onCreatePurity" />

    <Button
        android:text="View \n purity reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Bviewpurity"
        android:layout_above="@+id/Bviewreports"
        android:layout_alignStart="@+id/Bcreatepurity"
        android:onClick="onViewPurity" />

</RelativeLayout>
